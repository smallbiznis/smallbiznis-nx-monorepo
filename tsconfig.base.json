{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "importHelpers": true,
    "isolatedModules": true,

    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],

    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",

    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "strict": true,

    "customConditions": ["smallbiznis-nx-monorepo"]
  }
}
