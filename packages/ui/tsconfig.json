{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "types": [], 
    "lib": ["DOM", "DOM.Iterable", "ES2022"],

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "module": "esnext",
