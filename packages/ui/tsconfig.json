{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "types": [], 
    "lib": ["DOM", "DOM.Iterable", "ES2022"],

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "module": "esnext",
    "target": "es2022",
    "moduleResolution": "bundler",

    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts", "**/*.test.ts"]
}